.subscription
  - if can?(:create, Subscription) && !question.subscription_by(current_user)
    = link_to 'Subscribe', question_subscriptions_path(question), remote: true, method: :post
  - if can?(:destroy, @subscription) && question.subscription_by(current_user)
    = link_to 'Unsubscribe', question_subscription_path(question, @subscription), method: :delete, remote: true